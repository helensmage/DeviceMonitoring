<Window x:Class="DeviceMonitoring.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceMonitoring.Views"
        mc:Ignorable="d"
        Title="Панель мониторинга оборудования" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="GroupHeaderStyle" TargetType="GroupItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupItem">
                        <Expander IsExpanded="True" Margin="0,5">
                            <Expander.Header>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="12" Padding="5" />
                            </Expander.Header>
                            <ItemsPresenter Margin="10,0,0,0"/>
                        </Expander>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
                <TextBlock Text="Поиск:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10" Padding="2"/>
                <TextBlock Text="Статус:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding DeviceStatuses}" 
                          SelectedItem="{Binding StatusFilter}"
                          Margin="0,0,0,10">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                <Setter Property="Text" Value="Все статусы"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="Working">
                                                <Setter Property="Text" Value="Рабочий"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="Broken">
                                                <Setter Property="Text" Value="Сломан"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding}" Value="WrittenOff">
                                                <Setter Property="Text" Value="Списан"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                <Button Content="Добавить" Command="{Binding AddDeviceCommand}" Margin="0,0,5,0"/>
                <Button Content="Удалить" Command="{Binding DeleteDeviceCommand}" Margin="5,0,0,0"/>
            </StackPanel>
            <ListBox Grid.Row="2" 
                     ItemsSource="{Binding DevicesView}"
                     SelectedItem="{Binding SelectedDevice}"
                     Margin="5"
                     BorderThickness="1"
                     BorderBrush="LightGray">
                <ListBox.GroupStyle>
                    <GroupStyle ContainerStyle="{StaticResource GroupHeaderStyle}"/>
                </ListBox.GroupStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="5" Background="LightGray"/>
        <Grid Grid.Column="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Свойства устройства" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Категория:" Margin="5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding EditingDevice.Category, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Название:" Margin="5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding EditingDevice.Name, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Серийный номер:" Margin="5"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding EditingDevice.SerialNumber, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Дата установки:" Margin="5"/>
                        <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding EditingDevice.InstallationDate, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Статус:" Margin="5"/>
                        <ComboBox Grid.Row="4" Grid.Column="1" 
                                  ItemsSource="{Binding DeviceStatuses}" 
                                  SelectedItem="{Binding EditingDevice.Status}" 
                                  Margin="5">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding}" Value="Working">
                                                        <Setter Property="Text" Value="Рабочий"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding}" Value="Broken">
                                                        <Setter Property="Text" Value="Сломан"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding}" Value="WrittenOff">
                                                        <Setter Property="Text" Value="Списан"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Сохранить" Command="{Binding SaveCommand}" Margin="5,0,5,0"/>
                <Button Content="Отмена" Command="{Binding CancelCommand}" Margin="5,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>