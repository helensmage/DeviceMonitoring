<Window x:Class="DeviceMonitoring.Views.AddDeviceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeviceMonitoring.Views"
        mc:Ignorable="d"
        Title="Добавить устройство" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Категория:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="CategoryTextBox" Grid.Row="0" Grid.Column="1" Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        <TextBlock Text="Название:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        <TextBlock Text="Серийный номер:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SerialNumber, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
        <TextBlock Text="Дата установки:" Grid.Row="3" Grid.Column="0" Margin="5"/>
        <DatePicker Grid.Row="3" Grid.Column="1" SelectedDate="{Binding InstallationDate}" Margin="5"/>
        <TextBlock Text="Статус:" Grid.Row="4" Grid.Column="0" Margin="5"/>
        <ComboBox Grid.Row="4" Grid.Column="1" 
          ItemsSource="{Binding DeviceStatuses}" 
          SelectedItem="{Binding Status}" 
          Margin="5">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding}" Value="Working">
                                        <Setter Property="Text" Value="Рабочий"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding}" Value="Broken">
                                        <Setter Property="Text" Value="Сломан"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding}" Value="WrittenOff">
                                        <Setter Property="Text" Value="Списан"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="75" Height="25" Margin="5" Command="{Binding OkCommand}" IsDefault="True"/>
            <Button Content="Отмена" Width="75" Height="25" Margin="5" Command="{Binding CancelCommand}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>